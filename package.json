{
  "name": "quick-explorer",
  "displayName": "Quick Explorer",
  "description": "Quick and interactive explorer for VSCode",
  "version": "0.0.7",
  "publisher": "nacn",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/NaokiIshimura/vscode-quick-explorer.git"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "folder",
    "viewer",
    "explorer",
    "navigation"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "quickExplorer",
          "name": "Quick Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "quickExplorer.changeDirectory",
        "title": "Change Directory"
      },
      {
        "command": "quickExplorer.refresh",
        "title": "Refresh Quick Explorer"
      },
      {
        "command": "quickExplorer.goUp",
        "title": "Go to Parent Directory"
      },
      {
        "command": "quickExplorer.openSettings",
        "title": "Quick Explorer: 設定を開く",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "quickExplorer.openSettings",
          "when": "view == quickExplorer",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Quick Explorer",
      "properties": {
        "quickExplorer.defaultPath": {
          "type": "string",
          "default": "",
          "description": "デフォルトで開くディレクトリのパス。絶対パスまたは相対パス（ワークスペースルートからの相対）を指定できます。空の場合はワークスペースルートまたはホームディレクトリが使用されます。",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.10.9",
    "@types/vscode": "^1.105.0",
    "@vscode/vsce": "^3.6.2",
    "jimp": "^1.6.0",
    "typescript": "^5.9.3"
  }
}
